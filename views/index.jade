extends com/layout

block content
    script(type="text/javascript").
        window.user = !{req.user}
    h1= title
    p Welcome to #{title}
    if req.user
        a(href="/logout") Logout #{req.user.firstName} #{req.user.lastName}
    else
        p Login with
            a(href="/auth/google") Google
            a(href="/auth/facebook") Facebook